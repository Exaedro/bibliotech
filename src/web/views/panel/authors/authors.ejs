<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../../partials/admin/head.ejs') %>
	</head>
	<body>
		<div class="panel">
            <%- include('../../partials/admin/sidebar.ejs') %>
            <main>
                <%- include('../../partials/admin/navbar.ejs') %>
                <div class="contenedor">
                    <h1>Autores</h1>
                    <div class="authors-card">
                    <% authors.forEach(author => { %>
                        
                            <div class="author">
                                <img src="<%- author.Imagen %>" alt="<%- author.Nombre %>">
                                <span><%- author.Nombre %></span>
                                <p class="info"><%- author.CorreoElectronico %></p>
                                <a class="ver-autor" href="/profile/<%- author.UsuarioID %>">Ver perfil</a>
                            </div>
                        
                    <% }) %>
                    
                    </div>
                </div>

        <script src="js/cambiarTema.js"></script>
	</body>
</html>

