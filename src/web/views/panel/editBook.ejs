<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/admin/head.ejs') %>
	</head>
	<body>
		<div class="panel">
            <%- include('../partials/admin/sidebar.ejs') %>
            <main>
                <%- include('../partials/admin/navbar.ejs') %>
                <div class="contenedor">
                   <h1>Editar Libro</h1>
                    <form class="editarLibroContainer" action="/panel/books/<%- book[0].LibroID %>/edit" method="POST" enctype="multipart/form-data">

                        <!-- Imagen a un costado -->
                        <div class="portada">
                            <figure>
                                <img id="imagen" src="<%- book[0].imagen %>" alt="">
                            </figure>
                            <input type="file" id="imagenInput" name="imagen">
                        </div>

                        <!-- Formulario en el otro costado -->
                        <div class="datos">
                            <div class="row">
                                <div class="columna">
                                    <h4>Titulo</h4>
                                    <input type="text" value="<%- book[0].Titulo %>" placeholder="..." name="titulo">
                                    <h4>Autor</h4>
                                    <input type="text" value="<%- book[0].Autor %>" placeholder="..." name="autor">
                                    <h4>ISBN</h4>
                                    <input type="text" value="<%- book[0].ISBN %>" placeholder="..." name="isbn">
                                </div>
                                <div class="columna">
                                    <h4>Cantidad de paginas</h4>
                                    <input type="text" value="<%- book[0].CantidadPaginas %>" placeholder="..." name="cantidad_paginas">
                                    <h4>Idioma</h4>
                                    <input type="text" value="<%- book[0].Idioma %>" placeholder="..." name="idioma">
                                    <h4>Estado</h4>
                                    <select name="estado">
                                        <option value="disponible">Disponible</option>
                                        <option value="prestado">Prestado</option>
                                    </select>
                                </div>
                            </div>
                            <h4>Sinopsis</h4>
                            <textarea name="sinopsis" class="sinopsis"><%- book[0].Sinopsis %></textarea>
                            <div class="botones">
                                <a href="/panel/books">Cancelar</a>
                                <button type="submit">Editar</button>
                            </div>
                        </div>
                    </form>
                </div>
                <footer class="footerContainer">
                    <%- include('../partials/footer.ejs') %>
                </footer>
            </main>
        </div>

        <script src="js/cambiarTema.js"></script>
	</body>
</html>

<script src="js/previsualizarImagen.js"></script>